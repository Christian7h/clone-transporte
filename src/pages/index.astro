---
import Layout from '../layouts/Layout.astro';
import { Image } from "astro:assets"; 
import coverImage from "../assets/cover-image.jpg";
---

<Layout>
  <!-- Sección de portada -->
  <section id="page_cover" class="px-4 pb-2 text-white relative bg-black">
    <div class="container mx-auto">
      <div class="flex flex-col items-center py-10 text-center text-white">
        <div class="mb-4" data-aos="fade-down">
          <Image src={coverImage} class="max-h-[230px] max-w-full w-auto" alt="Cover Image" />
        </div>
        <div>
          <a href="#product_list" class="btn-theme inline-block px-6 py-3 text-white bg-[#B89037] hover:bg-yellow-600 rounded-full shadow-lg" data-aos="zoom-in">Contacto</a>
          <a href="#view_more" class="ml-3 text-white hover:underline" data-aos="zoom-in">Ver Más <i class="bi-caret-down-fill"></i></a>
        </div>
      </div>
    </div>
  </section>

  <!-- Sección de Transporte de Carga -->
  <div id="view_more">
	<div class="container flex mb-3 justify-content-between">
	</div>
    <section id="block7961" class="py-3 bg-transparent text-current border-opacity-30">
      <div class="container mx-auto px-4">
        <div id="blockContent7961" class="flex flex-wrap -mx-2 gap-8">
          <!-- Columna de texto -->
          <div class="md:w-7/12 sm:w-9/12 px-2" data-aos="fade-up">
            <div class="px-4 lg:px-8">
              <h2 class="mb-3 text-3xl font-bold">Transporte de Carga</h2>
              <p class="mb-3 text-lg font-semibold text-opacity-75">
                Empresa de transporte de carga dentro y fuera del gran Concepción.
              </p>
              <div class="font-medium space-y-2">
                <p>Contamos con personal de carga y descarga, y camiones cerrados hasta 26m³.</p>
                <p>Realizamos mudanzas desde o hacia la región del BíoBío, garantizando un servicio puntual, responsable y profesional. Cotizar y agendar con anticipación.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>

  <!-- Sección de Nuestros Servicios -->
  <section id="block7962" class="py-6 bg-white">
    <div class="container mx-auto px-4">
      <!-- Título -->
      <div class="mb-6 px-4 lg:px-8" data-aos="fade-up">
        <h2 class="text-2xl font-bold mb-3">Nuestros Servicios</h2>
        <p class="text-lg font-semibold text-opacity-75"></p>
      </div>

      <!-- Servicios -->
      <div class="flex flex-wrap -mx-2 px-4 lg:px-8">
        <!-- Servicio 1: Transporte -->
        <div class="md:w-3/12 px-2 mb-4 mt-3" data-aos="fade-up">
          <div class="flex flex-col items-center text-center space-y-3">
            <div class="text-5xl">
              <i class="bi bi-truck"></i>
            </div>
            <h5 class="text-lg font-medium">Transporte</h5>
            <p class="text-sm font-medium opacity-75">
              Transporte de carga en general para particulares, empresas, instituciones públicas y privadas.
            </p>
          </div>
        </div>

        <!-- Servicio 2: Mudanzas -->
        <div class="md:w-3/12 px-2 mb-4 mt-3" data-aos="fade-up">
          <div class="flex flex-col items-center text-center space-y-3">
            <div class="text-5xl">
              <i class="bi bi-house-door"></i>
            </div>
            <h5 class="text-lg font-medium">Mudanzas</h5>
            <p class="text-sm font-medium opacity-75">
              Mudanzas con o sin personal de carga y descarga. Con o sin embalaje film para mobiliario.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
