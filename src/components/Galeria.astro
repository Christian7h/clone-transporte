  <style>
/* Hacer que la imagen principal se ajuste a su contenedor y sea responsiva */
#lightgalleryContainer img {
  max-width: 100%; /* Se ajusta al tamaño del contenedor */
  height: auto;    /* Mantiene la proporción de la imagen */
  transition: transform 0.2s; /* Para el efecto hover de zoom */
}

#lightgalleryContainer img:hover {
  transform: scale(1.05);
}

  </style>

<script is:inline>
    document.addEventListener("DOMContentLoaded", function () {
      tns({
        container: '.my-slider',
        nav: true,
        gutter: 15, // Espacio entre imágenes
        responsive: {
          640: {
            items: 1, // Móviles: Mostrar 1 imagen
          },
          768: {
            items: 2, // Tablets: Mostrar 2 imágenes
          },
          1024: {
            items: 3, // Escritorios: Mostrar 3 imágenes
          },
        },
      });
    });

    document.addEventListener("DOMContentLoaded", function () {
    lightGallery(document.getElementById("lightgalleryContainer"), {
      selector: ".gallery_item", // Selector de las imágenes en la galería
      speed: 400, // Velocidad de transición entre imágenes
      loop: true, // Habilitar el bucle en la galería
      thumbnail: true, // Habilitar miniaturas
      zoom: true, // Habilitar zoom en las imágenes
      thumbPosition: 'bottom', // Miniaturas en la parte inferior
      plugins: [lgZoom, lgThumbnail], // Asegúrate de que lgZoom y lgThumbnail estén habilitados
      responsive: [
        {
          breakpoint: 1024, // Tablet y escritorios
          settings: {
            thumbnail: true,
            thumbPosition: 'bottom',
            items: 4 // Muestra 4 imágenes en el modo de galería
          }
        },
        {
          breakpoint: 768, // Móviles pequeños
          settings: {
            thumbnail: true,
            thumbPosition: 'bottom',
            items: 3 // Muestra 3 imágenes
          }
        },
        {
          breakpoint: 480, // Móviles grandes
          settings: {
            thumbnail: true,
            thumbPosition: 'bottom',
            items: 2 // Muestra 2 imágenes
          }
        }
      ]
    });
  });
  </script>
  